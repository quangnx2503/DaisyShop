<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:padding="10dp"
    tools:context=".controller.CheckoutBottom">

    <Button
        android:id="@+id/btnConfirmAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:onClick="onNextStepOrderClick"
        android:text="Pay order"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rateProductName"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/rateProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total payments"
        app:layout_constraintStart_toStartOf="@+id/btnConfirmAddress"
        app:layout_constraintTop_toTopOf="@+id/totalCost" />

    <TextView
        android:id="@+id/totalCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="totalPrice"
        android:textColor="#FF0000"
        app:layout_constraintEnd_toEndOf="@+id/btnConfirmAddress"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>