<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentCategory"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFD8D8"
    tools:context=".navigation_category">

    <fragment
            android:id="@+id/leftCategoryFragment"
            android:name="com.system.daisy.controller.ListCategory"
            android:layout_width="90dp"
            android:layout_height="561dp"
            android:layout_marginBottom="?attr/actionBarSize"
            android:background="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            tools:layout="@layout/fragment_category_left"/>
    <fragment
            android:id="@+id/rightCategoryFragment"
            android:name="com.system.daisy.controller.ListSubCategory"
            android:layout_width="316dp"
            android:layout_height="607dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="?attr/actionBarSize"
            android:background="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.213"
            app:layout_constraintStart_toEndOf="@+id/leftCategoryFragment"
            app:layout_constraintTop_toTopOf="@+id/leftCategoryFragment"
            app:layout_constraintVertical_bias="0.0"
            tools:layout="@layout/fragment_category_right"/>
</androidx.constraintlayout.widget.ConstraintLayout>